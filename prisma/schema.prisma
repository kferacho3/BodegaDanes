generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")   // keep commented
}

enum AvailabilityStatus {
  OPEN // blue
  OFF // grey
  BOOKED // red
}

model Availability {
  id        Int                @id @default(autoincrement())
  date      DateTime           @unique
  status    AvailabilityStatus @default(OPEN)
  services  Json?
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model Booking {
  id               Int      @id @default(autoincrement())
  date             DateTime
  serviceId        String
  confirmationCode String   @unique
  customerId       String?             
  customerEmail    String?               
  stripeId         String?  @unique
  meta             Json?
  createdAt        DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
